{
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["src", "add-ons"],
        "exclude": ["src/behaviors/old"]
    },
    "plugins": ["plugins/markdown"],
    "markdown": {
        "tags": ["summary"]
    },
    "templates": {
        "cleverLinks": true,
        "default": {
            "outputSourceFiles": false
        }
    },
    "opts": {
        "template": "jsdoc-template",
        "tutorials": "./src/jsdoc/tutorials",
        "recurse": true,
        "verbose": true,
        "destination": "./doc/",
        "private": false
    }
}
